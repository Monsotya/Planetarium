@model IEnumerable<PlanetariumModels.Poster>

@{
    ViewData["Title"] = "Edit Posters";
}
<h1>@ViewData["Title"]</h1>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width = device-width" />
    <title>Posters</title>
</head>

<body>
    <p>
        <a asp-action="Create" class="btn btn-primary" asp-controller="Posters">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Performance)
                </th>
                <th>
                    Date of event
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>                
                <th>
                    @Html.DisplayNameFor(model => model.Hall)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Performance.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfEvent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Hall.HallName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-controller="Posters" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-controller="Posters" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </body>
</html>